{
    "info": {
        "name": "SimpleAPI",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
        "url": "http://localhost:8080"
    },
    "item": [
        {
            "name": "Get Message",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "url": {
                    "raw": "/api/message"
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test(\"Status code is 200\", function () {",
                            "    pm.response.to.have.status(200);",
                            "});",
                            "",
                            "pm.test(\"Response is JSON\", function () {",
                            "    pm.response.to.be.json;",
                            "});",
                            "",
                            "pm.test(\"Message is correct\", function () {",
                            "    pm.expect(jsonData.message).to.equal(\"Hello World\");",
                            "});"
                        ]
                    }
                }
            ]
        },
        {
            "name": "Create Message",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "url": {
                    "raw": "/api/message"
                },
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"message\": \"Hello from test\"\n}"
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test(\"Status code is 201\", function () {",
                            "    pm.response.to.have.status(201);",
                            "});",
                            "",
                            "pm.test(\"Response is JSON\", function () {",
                            "    pm.response.to.be.json;",
                            "});",
                            "",
                            "pm.test(\"Message is saved\", function () {",
                            "    pm.expect(jsonData.message).to.equal(\"Hello from test\");",
                            "});"
                        ]
                    }
                }
            ]
        }
    ]
} 